@code {
    [Parameter] public List<string> Images { get; set; } = new List<string>();
    [Parameter] public string CarouselId { get; set; } = Guid.NewGuid().ToString();

    bool HistoriaDoEvento = false;

    string textHistoria = "História do Burger";

    void AlternaHistoria()
    {
        HistoriaDoEvento = !HistoriaDoEvento;
        if (textHistoria == "História do Burger")
        {
            textHistoria = "5º Burger Solidário";
        }
        else
        {
            textHistoria = "História do Burger";
        }
    }



    private async Task MoveLeft()
    {
        await JSRuntime.InvokeVoidAsync("moveCarousel", CarouselId, -1);
    }

    private async Task MoveRight()
    {
        await JSRuntime.InvokeVoidAsync("moveCarousel", CarouselId, 1);
    }
}

